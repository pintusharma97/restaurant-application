<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".Indian">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">
            <com.smarteist.autoimageslider.SliderLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/flipper_indian"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView_one"
                android:text="Just Show Me"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="start"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/recyclerView_indian"/>
<!--
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:nestedScrollingEnabled="true"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    android:fitsSystemWindows="true"
                    android:id="@+id/recyclerViewCombo"/>
            </RelativeLayout>

-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="true"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    android:fitsSystemWindows="true"
                    android:id="@+id/recyclerView_cuisineSection"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorText"
            app:borderWidth="0dp"
            android:clickable="true"
            android:src="@drawable/ic_free_breakfast"
            android:id="@+id/floating_cart"/>

        <TextView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/drawable_circle"
            android:gravity="center"
            android:textSize="14sp"
            android:backgroundTint="@color/colorText"
            android:elevation="16dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/counter_TextView"/>
    </FrameLayout>
</FrameLayout>